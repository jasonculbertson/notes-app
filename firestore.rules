rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule makes sure that data under '/artifacts/{appId}/users/{userId}/' can only be accessed
    // by an authenticated user whose UID matches that 'userId' in the path.
    match /artifacts/{appId}/users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
